{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://app.sednanetwork.com/camvas/2024-06-01/request.schema.json",
  "title": "Sedna Canvas Request Schema",
  "description": "The request schema for Sedna Canvas protocol exchange",
  "type": "object",
  "properties": {
    "appId": {
      "description": "The unique id for the app",
      "type": "string"
    },
    "version": {
      "description": "The protocol version",
      "type": "string",
      "const": "2024-06-01"
    },
    "user": {
      "description": "The user making the request",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "username": {
          "type": "string"
        },
        "firstName": {
          "type": ["string", "null"]
        },
        "lastName": {
          "type": ["string", "null"]
        },
        "defaultTeamId": {
          "type": "string"
        },
        "teams": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/entityRels/team"
          }
        },
        "emailAddress": {
          "type": ["string", "null"]
        },
        "ssoEmail": {
          "type": ["string", "null"]
        },
        "href": {
          "$ref": "#/definitions/href"
        }
      },
      "required": [
        "id",
        "username",
        "firstName",
        "lastName",
        "defaultTeamId",
        "teams",
        "emailAddress",
        "ssoEmail",
        "href"
      ]
    },
    "company": {
      "description": "The company of the user making the request",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "identifier": {
          "type": "string"
        }
      },
      "required": ["id", "name", "identifier"]
    },
    "context": {
      "type": "object",
      "properties": {
        "display": {
          "description": "The feature the app pertains to",
          "enum": [
            "GLOBAL",
            "MESSAGE_READ",
            "MESSAGE_COMPOSE",
            "PULSE_POSITION",
            "PULSE_CARGO",
            "PULSE_POSITION_FIXTURE_WORKSPACE",
            "PULSE_CARGO_FIXTURE_WORKSPACE",
            "CRM_PERSON",
            "CRM_DEPARTMENT",
            "CRM_COMPANY",
            "CRM_CONTACT_GROUP"
          ]
        },
        "entity": {
          "oneOf": [
            {
              "$ref": "#/definitions/entity/message"
            },
            {
              "$ref": "#/definitions/entity/pulsePosition"
            },
            {
              "$ref": "#/definitions/entity/pulseCargo"
            },
            {
              "$ref": "#/definitions/entity/pulsePositionFixtureWorkspace"
            },
            {
              "$ref": "#/definitions/entity/pulseCargoFixtureWorkspace"
            },
            {
              "$ref": "#/definitions/entity/crmPerson"
            },
            {
              "$ref": "#/definitions/entity/crmDepartment"
            },
            {
              "$ref": "#/definitions/entity/crmCompany"
            },
            {
              "$ref": "#/definitions/entity/crmContactGroup"
            }
          ]
        }
      },
      "required": ["display"]
    },
    "state": {
      "title": "State",
      "description": "Determines the states of various blocks or elements, keyed by the id of a block or element",
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_-]+$": {
          "anyOf": [
            {
              "type": "null"
            },
            {
              "type": "string",
              "description": "Text input, text area, select, and date picker value"
            },
            {
              "type": "number",
              "description": "Numeric input value"
            },
            {
              "type": "boolean",
              "description": "Checkbox value"
            },
            {
              "type": "array",
              "description": "Table rows, checkbox group selection, and multiselect selection",
              "items": {
                "type": "string"
              }
            },
            {
              "type": "object",
              "description": "Data grid state",
              "properties": {
                "selectedRows": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "sorting": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "desc": {
                        "type": "boolean"
                      }
                    },
                    "required": ["id"]
                  }
                },
                "page": {
                  "type": "number"
                },
                "pageSize": {
                  "type": "number",
                  "maximum": 100
                },
                "filters": {
                  "type": "object"
                }
              }
            }
          ]
        }
      }
    },
    "referenceData": {
      "title": "Reference data",
      "description": "Optional source of the data of various blocks or elements, keyed by the element id",
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_-]+$": {
          "anyOf": [
            {
              "type": "object",
              "description": "Cached Total and data for dataGrid",
              "properties": {
                "total": {
                  "description": "Total number of rows. Define total to paginate",
                  "type": "number"
                },
                "data": {
                  "type": "array",
                  "items": {
                    "type": "object"
                  }
                }
              }
            },
            {
              "type": "object",
              "description": "Cached data for select and multiSelect",
              "properties": {
                "options": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/common/optionProperties"
                  }
                }
              }
            },
            {
              "type": "object",
              "description": "Filter request params for select and multiSelect",
              "properties": {
                "filter": {
                  "type": "object",
                  "properties": {
                    "value": {
                      "type": "string"
                    }
                  },
                  "required": ["value"]
                }
              }
            },
            {
              "type": "object",
              "description": "Filter request params for dataGrid",
              "properties": {
                "filter": {
                  "type": "object",
                  "properties": {
                    "page": {
                      "type": "number"
                    },
                    "pageSize": {
                      "type": "number"
                    },
                    "sorting": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string"
                          },
                          "desc": {
                            "type": "boolean"
                          }
                        },
                        "required": ["id"]
                      }
                    },
                    "filters": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          ]
        }
      }
    },
    "action": {
      "title": "Action",
      "description": "The identifier of the interactive element where an action was triggered",
      "type": "string"
    }
  },
  "required": ["appId", "version", "user", "company", "context"],
  "definitions": {
    "entity": {
      "message": {
        "description": "A message in Sedna",
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "const": "MESSAGE"
          },
          "subject": {
            "type": ["string", "null"]
          },
          "snippet": {
            "type": ["string", "null"]
          },
          "from": {
            "type": ["string", "null"]
          },
          "to": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "cc": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "bcc": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "jobReferences": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/entityRels/jobReference"
            }
          },
          "categories": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/entityRels/category"
            }
          },
          "teams": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/entityRels/team"
            }
          },
          "href": {
            "$ref": "#/definitions/href"
          }
        },
        "required": [
          "id",
          "type",
          "subject",
          "snippet",
          "from",
          "to",
          "cc",
          "bcc",
          "jobReferences",
          "categories",
          "teams",
          "href"
        ]
      },
      "pulsePosition": {
        "description": "A Pulse position",
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "const": "PULSE_POSITION"
          },
          "vessel": {
            "$ref": "#/definitions/entityRels/pulseVessel"
          },
          "area": {
            "$ref": "#/definitions/entityRels/pulseArea"
          },
          "openDate": {
            "$ref": "#/definitions/entityRels/pulseDateRange"
          },
          "currentDwtInMt": {
            "type": "number"
          },
          "customColumns": {
            "$ref": "#/definitions/entityRels/pulseCustomColumns"
          },
          "href": {
            "$ref": "#/definitions/href"
          }
        },
        "required": [
          "id",
          "type",
          "vessel",
          "area",
          "openDate",
          "currentDwtInMt",
          "customColumns",
          "href"
        ]
      },
      "pulseCargo": {
        "description": "A Pulse cargo",
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "const": "PULSE_CARGO"
          },
          "loadAreas": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/entityRels/pulseArea"
            }
          },
          "dischargeAreas": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/entityRels/pulseArea"
            }
          },
          "loadDate": {
            "$ref": "#/definitions/entityRels/pulseDateRange"
          },
          "size": {
            "type": ["object", "null"],
            "properties": {
              "from": {
                "type": "number"
              },
              "to": {
                "type": "number"
              }
            }
          },
          "cargo": {
            "type": ["string", "null"]
          },
          "charterer": {
            "type": ["string", "null"]
          },
          "charterType": {
            "oneOf": [
              {
                "type": "null"
              },
              {
                "enum": ["TIME", "VOYAGE", "UNKNOWN"]
              }
            ]
          },
          "customColumns": {
            "$ref": "#/definitions/entityRels/pulseCustomColumns"
          },
          "href": {
            "$ref": "#/definitions/href"
          }
        },
        "required": [
          "id",
          "type",
          "loadAreas",
          "dischargeAreas",
          "loadDate",
          "size",
          "cargo",
          "charterer",
          "charterType",
          "customColumns",
          "href"
        ]
      },
      "pulsePositionFixtureWorkspace": {
        "description": "A Pulse position fixture workspace",
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "const": "PULSE_POSITION_FIXTURE_WORKSPACE"
          },
          "name": {
            "type": "string"
          },
          "userIds": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "cargoIds": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "href": {
            "$ref": "#/definitions/href"
          }
        },
        "required": ["id", "type", "name", "userIds", "cargoIds", "href"]
      },
      "pulseCargoFixtureWorkspace": {
        "description": "A Pulse cargo fixture workspace",
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "const": "PULSE_CARGO_FIXTURE_WORKSPACE"
          },
          "name": {
            "type": "string"
          },
          "userIds": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "positionIds": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "href": {
            "$ref": "#/definitions/href"
          }
        },
        "required": ["id", "type", "name", "userIds", "positionIds", "href"]
      },
      "crmPerson": {
        "description": "A person from the CRM entity system",
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "const": "CRM_PERSON"
          },
          "href": {
            "$ref": "#/definitions/href"
          }
        },
        "required": ["id", "href"]
      },
      "crmDepartment": {
        "description": "A department from the CRM entity system",
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "const": "CRM_DEPARTMENT"
          },
          "href": {
            "$ref": "#/definitions/href"
          }
        },
        "required": ["id", "href"]
      },
      "crmCompany": {
        "description": "A company from the CRM entity system",
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "const": "CRM_COMPANY"
          },
          "href": {
            "$ref": "#/definitions/href"
          }
        },
        "required": ["id", "href"]
      },
      "crmContactGroup": {
        "description": "A contact group from the CRM entity system",
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "const": "CRM_CONTACT_GROUP"
          },
          "href": {
            "$ref": "#/definitions/href"
          }
        },
        "required": ["id", "href"]
      }
    },
    "entityRels": {
      "team": {
        "description": "A Sedna team",
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "foreignKey": {
            "type": ["string", "null"]
          },
          "href": {
            "$ref": "#/definitions/href"
          }
        },
        "required": ["id", "name", "foreignKey", "href"]
      },
      "jobReference": {
        "description": "A job reference",
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": ["string", "null"]
          },
          "foreignKey": {
            "type": ["string", "null"]
          },
          "type": {
            "type": "string"
          },
          "attributes": {
            "type": "object"
          },
          "source": {
            "type": ["string", "null"]
          },
          "href": {
            "$ref": "#/definitions/href"
          }
        },
        "required": ["id", "name", "foreignKey", "type", "attributes", "source", "href"]
      },
      "category": {
        "description": "A category",
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "label": {
            "type": ["string", "null"]
          },
          "href": {
            "$ref": "#/definitions/href"
          }
        },
        "required": ["id", "name", "label", "href"]
      },
      "pulseVessel": {
        "description": "A Pulse vessel, related to a position",
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "imo": {
            "type": ["string", "null"]
          }
        },
        "required": ["id", "name", "imo"]
      },
      "pulseArea": {
        "description": "A Pulse area, related to positions and cargoes",
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "type": {
            "type": ["string", "null"]
          },
          "geo": {
            "type": ["string", "null"]
          }
        },
        "required": ["id", "name", "type", "geo"]
      },
      "pulseDateRange": {
        "description": "A range of dates used in Pulse. No timezone or time information. Formatted as YYYY-MM-DD.",
        "type": ["object", "null"],
        "properties": {
          "from": {
            "type": "string",
            "format": "date"
          },
          "to": {
            "type": "string",
            "format": "date"
          }
        },
        "required": ["from", "to"]
      },
      "pulseCustomColumns": {
        "type": ["object", "null"],
        "patternProperties": {
          "^[a-zA-Z0-9_-]+$": {
            "type": "object",
            "properties": {
              "value": {
                "type": ["null", "string", "number", "boolean"]
              },
              "link": {
                "type": "string"
              },
              "popover": {
                "type": "string"
              }
            },
            "required": ["value"]
          }
        }
      }
    },
    "href": {
      "type": "string",
      "format": "uri"
    }
  }
}
