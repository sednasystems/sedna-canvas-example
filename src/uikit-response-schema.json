{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://app.sednanetwork.com/uikit/2024-06-01/response.schema.json",
  "title": "Sedna Link Response Schema",
  "description": "The response schema for Sedna Link protocol exchange",
  "type": "object",
  "properties": {
    "surfaces": {
      "title": "Surfaces",
      "description": "The surfaces where the app will render",
      "type": "array",
      "items": {
        "anyOf": [
          {
            "$ref": "#/$defs/surfaces/properties/panel"
          },
          {
            "$ref": "#/$defs/surfaces/properties/modal"
          },
          {
            "$ref": "#/$defs/surfaces/properties/dashboard"
          },
          {
            "$ref": "#/$defs/surfaces/properties/card"
          }
        ]
      },
      "minItems": 1
    },
    "state": {
      "title": "State",
      "description": "Determines the states of various blocks or elements, keyed by the id of a block or element",
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_-]+$": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "string"
            },
            {
              "type": "number"
            },
            {
              "type": "boolean"
            },
            {
              "type": "array",
              "items": {
                "oneOf": [
                  {
                    "type": "string"
                  }
                ]
              }
            }
          ]
        }
      }
    },
    "notifications": {
      "title": "Notifications",
      "description": "Describes notifications (e.g. toasts) to show.",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "level": {
            "enum": ["INFO", "WARNING", "ERROR"]
          },
          "button": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "label": {
                "type": "string"
              },
              "href": {
                "type": "string"
              },
              "action": {
                "type": "string",
                "enum": ["custom"]
              }
            },
            "anyOf": [
              {
                "required": ["id", "label", "href"]
              },
              {
                "required": ["id", "label", "action"]
              }
            ]
          }
        },
        "required": ["id", "message", "level"]
      }
    },
    "validationErrors": {
      "title": "Validation errors",
      "description": "Describes validation errors to show next to controls.",
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_-]+$": {
          "type": "string"
        }
      }
    },
    "stale": {
      "title": "Stale",
      "description": "Entities that have been updated in the current exchange",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "MESSAGE",
              "PULSE_POSITION",
              "PULSE_CARGO",
              "PULSE_POSITION_FIXTURE_WORKSPACE",
              "PULSE_CARGO_FIXTURE_WORKSPACE",
              "CRM_PERSON",
              "CRM_DEPARTMENT",
              "CRM_COMPANY",
              "CRM_CONTACT_GROUP"
            ]
          },
          "id": {
            "type": "string"
          }
        },
        "required": ["type", "id"]
      }
    }
  },
  "required": ["surfaces"],
  "$defs": {
    "surfaces": {
      "type": "object",
      "properties": {
        "panel": {
          "title": "Panel",
          "description": "A Panel is a narrow surface that appears on the side of the screen",
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["panel"]
            },
            "id": {
              "type": "string"
            },
            "blocks": {
              "type": "array",
              "items": {
                "anyOf": [
                  {
                    "$ref": "#/$defs/blocks/properties/header"
                  },
                  {
                    "$ref": "#/$defs/blocks/properties/row"
                  },
                  {
                    "$ref": "#/$defs/blocks/properties/section"
                  },
                  {
                    "$ref": "#/$defs/blocks/properties/footer"
                  },
                  {
                    "$ref": "#/$defs/blocks/properties/divider"
                  },
                  {
                    "$ref": "#/$defs/blocks/properties/tabs"
                  },
                  {
                    "$ref": "#/$defs/blocks/properties/iframe"
                  }
                ]
              },
              "minItems": 1
            }
          },
          "required": ["type", "id", "blocks"]
        },
        "modal": {
          "title": "Modal",
          "description": "A Modal is a surface that appears as a dialog layered over the screen",
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["modal"]
            },
            "id": {
              "type": "string"
            },
            "blocks": {
              "type": "array",
              "items": {
                "anyOf": [
                  {
                    "$ref": "#/$defs/blocks/properties/header"
                  },
                  {
                    "$ref": "#/$defs/blocks/properties/row"
                  },
                  {
                    "$ref": "#/$defs/blocks/properties/section"
                  },
                  {
                    "$ref": "#/$defs/blocks/properties/footer"
                  },
                  {
                    "$ref": "#/$defs/blocks/properties/divider"
                  },
                  {
                    "$ref": "#/$defs/blocks/properties/tabs"
                  },
                  {
                    "$ref": "#/$defs/blocks/properties/iframe"
                  }
                ]
              },
              "minItems": 1
            }
          },
          "required": ["type", "id", "blocks"]
        },
        "dashboard": {
          "title": "Dashboard",
          "description": "A Dashboard is a surface that appears as a full width portion of the screen",
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["dashboard"]
            },
            "id": {
              "type": "string"
            },
            "blocks": {
              "type": "array",
              "items": {
                "anyOf": [
                  {
                    "$ref": "#/$defs/blocks/properties/header"
                  },
                  {
                    "$ref": "#/$defs/blocks/properties/section"
                  },
                  {
                    "$ref": "#/$defs/blocks/properties/row"
                  },
                  {
                    "$ref": "#/$defs/blocks/properties/footer"
                  },
                  {
                    "$ref": "#/$defs/blocks/properties/divider"
                  },
                  {
                    "$ref": "#/$defs/blocks/properties/tabs"
                  },
                  {
                    "$ref": "#/$defs/blocks/properties/iframe"
                  }
                ]
              },
              "minItems": 1
            }
          },
          "required": ["type", "id", "blocks"]
        },
        "card": {
          "title": "Card",
          "description": "A Card is a surface that appears as a small portion of the screen",
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["card"]
            },
            "id": {
              "type": "string"
            },
            "blocks": {
              "type": "array",
              "description": "The blocks that will be rendered in the Card",
              "items": {
                "anyOf": [
                  {
                    "$ref": "#/$defs/blocks/properties/header"
                  },
                  {
                    "$ref": "#/$defs/blocks/properties/section"
                  },
                  {
                    "$ref": "#/$defs/blocks/properties/row"
                  },
                  {
                    "$ref": "#/$defs/blocks/properties/divider"
                  },
                  {
                    "$ref": "#/$defs/blocks/properties/footer"
                  },
                  {
                    "$ref": "#/$defs/blocks/properties/iframe"
                  }
                ]
              },
              "minItems": 1
            }
          },
          "required": ["type", "id", "blocks"]
        }
      }
    },
    "blocks": {
      "type": "object",
      "properties": {
        "header": {
          "title": "Header",
          "description": "The Header block of a surface",
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["header"]
            },
            "title": {
              "type": "string"
            },
            "elements": {
              "description": "Elements that can be added on the left of the Header",
              "type": "array",
              "items": {
                "anyOf": [
                  {
                    "$ref": "#/$defs/elements/properties/filterDropdown"
                  },
                  {
                    "$ref": "#/$defs/elements/properties/filterButtons"
                  }
                ]
              },
              "minItems": 1
            }
          },
          "anyOf": [
            {
              "required": ["type", "title"]
            },
            {
              "required": ["type", "elements"]
            }
          ]
        },
        "footer": {
          "title": "Footer",
          "description": "The Footer block of a surface",
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["footer"]
            },
            "elements": {
              "description": "Elements placed in the Footer",
              "type": "array",
              "items": {
                "anyOf": [
                  {
                    "$ref": "#/$defs/elements/properties/button"
                  },
                  {
                    "$ref": "#/$defs/elements/properties/text"
                  }
                ]
              },
              "minItems": 1
            }
          },
          "required": ["elements"]
        },
        "row": {
          "title": "Row",
          "description": "A Row block that contains elements",
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["row"]
            },
            "justify": {
              "type": "string",
              "enum": ["left", "center", "right"],
              "default": "start"
            },
            "elements": {
              "type": "array",
              "items": {
                "anyOf": [
                  {
                    "$ref": "#/$defs/elements/properties/filterButtons"
                  },
                  {
                    "$ref": "#/$defs/elements/properties/filterDropdown"
                  },
                  {
                    "$ref": "#/$defs/elements/properties/textArea"
                  },
                  {
                    "$ref": "#/$defs/elements/properties/textInput"
                  },
                  {
                    "$ref": "#/$defs/elements/properties/numericInput"
                  },
                  {
                    "$ref": "#/$defs/elements/properties/select"
                  },
                  {
                    "$ref": "#/$defs/elements/properties/multiSelect"
                  },
                  {
                    "$ref": "#/$defs/elements/properties/checkbox"
                  },
                  {
                    "$ref": "#/$defs/elements/properties/datePicker"
                  },
                  {
                    "$ref": "#/$defs/elements/properties/table"
                  },
                  {
                    "$ref": "#/$defs/elements/properties/text"
                  },
                  {
                    "$ref": "#/$defs/elements/properties/file"
                  },
                  {
                    "$ref": "#/$defs/elements/properties/alert"
                  },
                  {
                    "$ref": "#/$defs/elements/properties/image"
                  },
                  {
                    "$ref": "#/$defs/elements/properties/button"
                  },
                  {
                    "$ref": "#/$defs/elements/properties/iconButton"
                  }
                ]
              },
              "minItems": 1
            }
          },
          "required": ["type", "elements"]
        },
        "tabs": {
          "title": "Tabs",
          "description": "The Tabs block of a surface",
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["tabs"]
            },
            "id": {
              "type": "string"
            },
            "tabItems": {
              "type": "array",
              "description": "The tabs that will be rendered depending on tab selection",
              "items": {
                "type": "object",
                "properties": {
                  "label": {
                    "type": "string"
                  },
                  "id": {
                    "type": "string"
                  },
                  "blocks": {
                    "type": "array",
                    "description": "The blocks that will be rendered in this tab",
                    "items": {
                      "anyOf": [
                        {
                          "$ref": "#/$defs/blocks/properties/section"
                        },
                        {
                          "$ref": "#/$defs/blocks/properties/row"
                        },
                        {
                          "$ref": "#/$defs/blocks/properties/divider"
                        },
                        {
                          "$ref": "#/$defs/blocks/properties/iframe"
                        }
                      ]
                    },
                    "minItems": 1
                  }
                },
                "required": ["label", "id", "blocks"]
              },
              "minItems": 1
            }
          },
          "required": ["type", "id", "tabItems"]
        },
        "section": {
          "title": "Section",
          "description": "A Section block that contains elements",
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["section"]
            },
            "collapsible": {
              "type": "boolean"
            },
            "title": {
              "type": "string"
            },
            "columns": {
              "type": "number",
              "description": "The number of columns the Section can contain when nesting Sections",
              "minimum": 1,
              "maximum": 6
            },
            "columnSpan": {
              "type": "number",
              "description": "The number of columns the Section should span",
              "minimum": 1,
              "maximum": 6
            },
            "justify": {
              "type": "string",
              "enum": ["left", "center", "right"],
              "default": "start"
            },
            "elements": {
              "type": "array",
              "items": {
                "oneOf": [
                  {
                    "anyOf": [
                      {
                        "$ref": "#/$defs/blocks/properties/section"
                      },
                      {
                        "$ref": "#/$defs/blocks/properties/row"
                      },
                      {
                        "$ref": "#/$defs/blocks/properties/divider"
                      }
                    ]
                  },
                  {
                    "anyOf": [
                      {
                        "$ref": "#/$defs/elements/properties/filterButtons"
                      },
                      {
                        "$ref": "#/$defs/elements/properties/filterDropdown"
                      },
                      {
                        "$ref": "#/$defs/elements/properties/textArea"
                      },
                      {
                        "$ref": "#/$defs/elements/properties/textInput"
                      },
                      {
                        "$ref": "#/$defs/elements/properties/numericInput"
                      },
                      {
                        "$ref": "#/$defs/elements/properties/select"
                      },
                      {
                        "$ref": "#/$defs/elements/properties/multiSelect"
                      },
                      {
                        "$ref": "#/$defs/elements/properties/checkbox"
                      },
                      {
                        "$ref": "#/$defs/elements/properties/datePicker"
                      },
                      {
                        "$ref": "#/$defs/elements/properties/table"
                      },
                      {
                        "$ref": "#/$defs/elements/properties/text"
                      },
                      {
                        "$ref": "#/$defs/elements/properties/file"
                      },
                      {
                        "$ref": "#/$defs/elements/properties/alert"
                      },
                      {
                        "$ref": "#/$defs/elements/properties/image"
                      },
                      {
                        "$ref": "#/$defs/elements/properties/button"
                      },
                      {
                        "$ref": "#/$defs/elements/properties/iconButton"
                      }
                    ]
                  }
                ]
              },
              "minItems": 1
            }
          },
          "oneOf": [
            {
              "required": ["type", "elements"]
            },
            {
              "required": ["type", "elements", "title", "collapsible"]
            }
          ]
        },
        "divider": {
          "title": "Divider",
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["divider"]
            }
          },
          "required": ["type"]
        },
        "iframe": {
          "title": "iframe",
          "description": "An iframe block to embed external content",
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["iframe"]
            },
            "src": {
              "type": "string"
            }
          },
          "required": ["type", "src"]
        }
      }
    },
    "elements": {
      "type": "object",
      "properties": {
        "filterButtons": {
          "title": "Filter Buttons",
          "description": "Filter Buttons that can be used to filter a view based on selection",
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["filterButtons"]
            },
            "label": {
              "type": "string"
            },
            "id": {
              "type": "string"
            },
            "options": {
              "type": "array",
              "description": "The options that will be rendered as buttons",
              "items": {
                "type": "object",
                "properties": {
                  "label": {
                    "type": "string"
                  },
                  "value": {
                    "type": "string"
                  }
                },
                "required": ["label", "value"]
              }
            }
          },
          "required": ["type", "id", "options"]
        },
        "filterDropdown": {
          "title": "Filter Dropdown",
          "description": "Filter Dropdown that can be used to filter a view based on selection",
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["filterDropdown"]
            },
            "label": {
              "type": "string"
            },
            "id": {
              "type": "string"
            },
            "placeholder": {
              "type": "string"
            },
            "options": {
              "type": "array",
              "description": "The options that will be rendered as dropdown items",
              "items": {
                "type": "object",
                "properties": {
                  "label": {
                    "type": "string"
                  },
                  "value": {
                    "type": "string"
                  }
                },
                "required": ["label", "value"]
              }
            }
          },
          "anyOf": [
            {
              "required": ["type", "id", "label"]
            },
            {
              "required": ["type", "id", "placeholder"]
            }
          ]
        },
        "textArea": {
          "title": "Text Area",
          "description": "A Text Area field input",
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["textArea"]
            },
            "label": {
              "type": "string"
            },
            "id": {
              "type": "string"
            },
            "placeholder": {
              "type": "string"
            },
            "required": {
              "type": "boolean"
            },
            "maxLength": {
              "type": "number"
            }
          },
          "anyOf": [
            {
              "required": ["type", "id", "label"]
            },
            {
              "required": ["type", "id", "placeholder"]
            }
          ]
        },
        "textInput": {
          "title": "Text Input",
          "description": "A Text Input field",
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["textInput"]
            },
            "label": {
              "type": "string"
            },
            "id": {
              "type": "string"
            },
            "placeholder": {
              "type": "string"
            },
            "required": {
              "type": "boolean"
            },
            "maxLength": {
              "type": "number"
            }
          },
          "anyOf": [
            {
              "required": ["type", "id", "label"]
            },
            {
              "required": ["type", "id", "placeholder"]
            }
          ]
        },
        "numericInput": {
          "title": "Numeric Input",
          "description": "A Numeric Input field",
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["numericInput"]
            },
            "label": {
              "type": "string"
            },
            "id": {
              "type": "string"
            },
            "placeholder": {
              "type": "string"
            },
            "required": {
              "type": "boolean"
            },
            "min": {
              "type": "number"
            },
            "max": {
              "type": "number"
            }
          },
          "anyOf": [
            {
              "required": ["type", "id", "label"]
            },
            {
              "required": ["type", "id", "placeholder"]
            }
          ]
        },
        "select": {
          "title": "Select",
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["select"]
            },
            "label": {
              "type": "string"
            },
            "id": {
              "type": "string"
            },
            "options": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "label": {
                    "type": "string"
                  },
                  "value": {
                    "type": "string"
                  }
                },
                "required": ["label", "value"]
              }
            },
            "placeholder": {
              "type": "string"
            },
            "required": {
              "type": "boolean"
            }
          },
          "anyOf": [
            {
              "required": ["type", "id", "label", "options"]
            },
            {
              "required": ["type", "id", "placeholder", "options"]
            }
          ]
        },
        "multiSelect": {
          "title": "Multi Select",
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["multiSelect"]
            },
            "label": {
              "type": "string"
            },
            "id": {
              "type": "string"
            },
            "options": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "label": {
                    "type": "string"
                  },
                  "value": {
                    "type": "string"
                  }
                },
                "required": ["label", "value"]
              }
            },
            "placeholder": {
              "type": "string"
            },
            "required": {
              "type": "boolean"
            },
            "minSelection": {
              "type": "number"
            },
            "maxSelection": {
              "type": "number"
            }
          },
          "anyOf": [
            {
              "required": ["type", "id", "label", "options"]
            },
            {
              "required": ["type", "id", "placeholder", "options"]
            }
          ]
        },
        "datePicker": {
          "title": "Date Picker",
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["datePicker"]
            },
            "label": {
              "type": "string"
            },
            "id": {
              "type": "string"
            },
            "placeholder": {
              "type": "string"
            },
            "required": {
              "type": "boolean"
            },
            "minDate": {
              "type": "string"
            },
            "maxDate": {
              "type": "string"
            }
          },
          "anyOf": [
            {
              "required": ["type", "id", "label"]
            },
            {
              "required": ["type", "id", "placeholder"]
            }
          ]
        },
        "checkbox": {
          "title": "Checkbox",
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["checkbox"]
            },
            "label": {
              "type": "string"
            },
            "id": {
              "type": "string"
            }
          },
          "required": ["type", "id", "label"]
        },
        "checkboxGroup": {
          "title": "Checkbox Group",
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["checkboxGroup"]
            },
            "label": {
              "type": "string"
            },
            "id": {
              "type": "string"
            },
            "options": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "label": {
                    "type": "string"
                  },
                  "value": {
                    "type": "string"
                  }
                },
                "required": ["label", "value"]
              }
            }
          },
          "required": ["type", "id", "label", "options"]
        },
        "table": {
          "title": "Table",
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["table"]
            },
            "id": {
              "type": "string"
            },
            "columnDefinitions": {
              "type": "array",
              "items": {
                "anyOf": [
